<ehcache>
	<diskStore path="java.io.tmpdir" />


	<defaultCache maxElementsInMemory="10000" eternal="false"
		timeToIdleSeconds="120" timeToLiveSeconds="120" overflowToDisk="true" />

	<!-- default config 3min-->
	<cache name="0" maxElementsInMemory="100000"
		eternal="false" timeToIdleSeconds="300" timeToLiveSeconds="300"
		overflowToDisk="true" />
		
	<!-- default config 15-30min-->
	<cache name="1" maxElementsInMemory="10000"
		eternal="false" timeToIdleSeconds="900" timeToLiveSeconds="1800"
		overflowToDisk="true" />
		
	<!-- default config 1-2min-->
	<cache name="2" maxElementsInMemory="100000"
		eternal="false" timeToIdleSeconds="60" timeToLiveSeconds="120"
		overflowToDisk="true" />
		
	<!--default config 30min-->
	<cache name="3" maxElementsInMemory="100000"
		eternal="false" timeToIdleSeconds="1800" timeToLiveSeconds="1800"
		overflowToDisk="true" />
		
	<!-- default config 60-120min-->
	<cache name="4" maxElementsInMemory="100000"
		eternal="false" timeToIdleSeconds="3600" timeToLiveSeconds="7200"
		overflowToDisk="true" />
    
    <!-- default config 6hour-->
	<cache name="5" maxElementsInMemory="100000"
		eternal="false" timeToIdleSeconds="21600" timeToLiveSeconds="21600"
		overflowToDisk="true" />
		
	<!-- default config 24hour-->
	<cache name="6" maxElementsInMemory="100000"
		eternal="false" timeToIdleSeconds="86400" timeToLiveSeconds="86400"
		overflowToDisk="true" />
		
		
	<!--视频  -->	
	<cache name="cms_video" maxElementsInMemory="100000"
		eternal="false" timeToIdleSeconds="3600" timeToLiveSeconds="600"
		overflowToDisk="true" />
	<!--文库  -->		
	<cache name="cms_doc" maxElementsInMemory="100000"
		eternal="false" timeToIdleSeconds="3600" timeToLiveSeconds="600"
		overflowToDisk="true" />
	<!--病例 -->		
	<cache name="case_baseinfo" maxElementsInMemory="100000"
		eternal="false" timeToIdleSeconds="3600" timeToLiveSeconds="600"
		overflowToDisk="true" />
		
</ehcache>


